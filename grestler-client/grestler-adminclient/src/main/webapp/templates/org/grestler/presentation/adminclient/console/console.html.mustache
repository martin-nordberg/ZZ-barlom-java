{{! Template for the main page of Grestler Console }}

{{! Navigation Bar }}
<header class="navigation" id="top-nav-id" role="banner">

    <nav role="navigation" class="navbar navbar-default">

        {{! Brand and toggle get grouped for better mobile display }}
        <div class="navbar-header">

            <button type="button" data-target="#navbarCollapse" data-toggle="collapse" class="navbar-toggle">

                <span class="sr-only">Toggle navigation</span>

                <i class="glyphicon glyphicon-menu-hamburger" aria-hidden="true"></i>

            </button>

            <a href="#" class="navbar-brand">GRESTLER</a>

        </div>

        {{! Collection of nav links and other content for toggling }}

        <div id="navbarCollapse" class="collapse navbar-collapse">

            <ul class="nav navbar-nav">

                <li {{#if isServerPageActive}}class="active"{{/if}}><a href="#" on-click="serverClicked">SERVER</a></li>

                <li {{#if isSchemaPageActive}}class="active"{{/if}}><a href="#" on-click="schemaClicked">SCHEMA</a></li>

                <li {{#if isQueriesPageActive}}class="active"{{/if}}><a href="#" on-click="queriesClicked">QUERIES</a>
                </li>

            </ul>

            <ul class="nav navbar-nav navbar-right">

                <li><a href="#" on-click='searchClicked'>SEARCH</a></li>

            </ul>

        </div>

    </nav>

</header>

{{! Server Page }}
{{#if isServerPageActive}}
    <section class="server-page" id="server-page-id">

        {{! TODO: separate component; lots more functionality }}
        <div class="left-panel col-xs-12">

            <h1 class="grestler">Grestler Server</h1>

            <a class="btnLink" href="/grestleradmin/exit">Shut Down</a>
        </div>

    </section>
{{/if}}

{{! Schema Page }}
{{#if isSchemaPageActive}}
    <grestler-schema-page></grestler-schema-page>
{{/if}}

{{! Queries Page }}
{{#if isQueriesPageActive}}
    <section class="queries-page" id="queries-page-id">

        {{! TODO: separate component; lots more functionality }}
        <div class="left-panel col-xs-12">

            <h1 class="grestler">Queries</h1>

            <ul>
                <li><a href="/grestlerdata/metadata/packages">Packages</a></li>
                <li><a href="/grestlerdata/metadata/vertextypes">Vertex Types</a></li>
                <li><a href="/grestlerdata/metadata/edgetypes">Edge Types</a></li>
                <li><a href="/grestlerdata/metadata/directededgetypes">Directed Edge Types</a></li>
                <li><a href="/grestlerdata/metadata/undirectededgetypes">Undirected Edge Types</a></li>
                <li><a href="/grestlerdata/metadata/attributetypes">Attribute Types</a></li>
            </ul>

        </div>

    </section>
{{/if}}
